// Narrativa

1- Crie 4 variaveis tipo decimal (vlr1, vlr2, vlr3 e salarioLiquido)
2- Receba valores vlr1, vlr2 e comissao
3.1- Faça cálculo do salário líquido
3.2- salarioLiquido = (vlr1 - vlr2 + comissão)
4- Exiba salarioLiquido

//Pseudocódigo

algoritmo "Salário Líquido"

declare
	vlr1, vlr2, vlr3: decimal
	salarioLiquido : decimal

inicio
 	
    escreva("Insira seu salário bruto:")
	leia(vlr1)
	
    escreva("Insira o valor de desconto:")
	leia(vlr2)

    escreva("Insira a comissão do salário:")
	leia(comissao)

	salarioLiquido = (vlr1 - vlr2 + vlr3)
	
    escreva("Salario Líquido = ", salarioLiquido)

fim

//Código

int main (){
    
    float vlr1, vlr2, vlr3;
    float salarioLiquido;

    printf("Insira seu salário bruto: ");
    scanf("%f", &vlr1);

    printf("Insira o valor de desconto: ");
    scanf("%f", &vlr2);

    printf("Insira a comissão do salário: ");
    scanf("%f", &vlr3);

    salarioLiquido = (vlr1 - vlr2 + vlr3);

    printf("Salário Líquido= %f", salarioLiquido);
}
